<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:HomeMaintenanceApp.Pages"
       x:Class="HomeMaintenanceApp.AppShell"
       Shell.NavBarIsVisible="True">

    <!-- HOME FIRST -->
    <FlyoutItem Title="Home" Route="Home" Icon="home.png">
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate pages:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Welcome" Route="Onboarding" Icon="welcome.png">
        <ShellContent Title="Welcome"
                      ContentTemplate="{DataTemplate pages:OnboardingPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Tasks" Route="Tasks" Icon="tasks.png">
        <ShellContent Title="Tasks"
                      ContentTemplate="{DataTemplate pages:TaskPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Appliances" Route="Appliances" Icon="appliances.png">
        <ShellContent Title="Appliances"
                      ContentTemplate="{DataTemplate pages:AppliancesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Issues" Route="Issues" Icon="issues.png">
        <ShellContent Title="Issues"
                      ContentTemplate="{DataTemplate pages:IssuesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Knowledge" Route="Knowledge" Icon="knowledge.png">
        <ShellContent Title="Knowledge"
                      ContentTemplate="{DataTemplate pages:KnowledgePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Seasonal" Route="Seasonal" Icon="seasonal.png">
        <ShellContent Title="Seasonal"
                      ContentTemplate="{DataTemplate pages:SeasonalPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Hurricane" Route="Hurricane" Icon="hurricane.png">
        <ShellContent Title="Hurricane"
                      ContentTemplate="{DataTemplate pages:HurricanePage}" />
    </FlyoutItem>

</Shell>